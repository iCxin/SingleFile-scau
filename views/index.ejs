    <script>
        function filterTable() {
            const input = document.getElementById("searchInput");
            const filter = input.value.toLowerCase();
            const table = document.getElementById("fileTable");
            const tr = table.getElementsByTagName("tr");
            let visibleCount = 0;

            for (let i = 1; i < tr.length; i++) {
                const tdDate = tr[i].getElementsByTagName("td")[0];
                const tdTitle = tr[i].getElementsByTagName("td")[1];
                
                if (tdDate && tdTitle) {
                    const dateText = tdDate.textContent || tdDate.innerText;
                    const titleText = tdTitle.textContent || tdTitle.innerText;
                    
                    if (dateText.toLowerCase().indexOf(filter) > -1 || titleText.toLowerCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                        visibleCount++;
                    } else {
                        tr[i].style.display = "none";
                    }
                }       
            }
            
            document.getElementById("fileCount").textContent = visibleCount;
        }

        let sortDirection = [true, true]; // true for descending (default for date), false for ascending

        function sortTable(n) {
            const table = document.getElementById("fileTable");
            let rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
            switching = true;
            dir = sortDirection[n] ? "asc" : "desc"; 
            
            const headers = table.getElementsByTagName("th");
            for (let h of headers) {
                h.classList.remove("sorted-asc", "sorted-desc");
            }
            headers[n].classList.add(dir === "asc" ? "sorted-asc" : "sorted-desc");

            while (switching) {
                switching = false;
                rows = table.rows;
                
                for (i = 1; i < (rows.length - 1); i++) {
                    shouldSwitch = false;
                    x = rows[i].getElementsByTagName("TD")[n];
                    y = rows[i + 1].getElementsByTagName("TD")[n];
                    
                    let xVal, yVal;

                    if (n === 0) { 
                        xVal = Number(x.getAttribute('data-timestamp'));
                        yVal = Number(y.getAttribute('data-timestamp'));
                    } else {
                        xVal = x.textContent.toLowerCase();
                        yVal = y.textContent.toLowerCase();
                    }

                    if (dir == "asc") {
                        if (xVal > yVal) {
                            shouldSwitch = true;
                            break;
                        }
                    } else if (dir == "desc") {
                        if (xVal < yVal) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                }
                
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                    switchcount++;
                } else {
                    if (switchcount == 0 && dir == "asc") {
                        // dir = "desc";
                        // switching = true;
                    }
                }
            }
            sortDirection[n] = !sortDirection[n];
        }
